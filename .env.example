# Spacetime Visualizer Configuration
# Copy this file to .env to customize your local environment
# All values are optional - safe defaults will be used if not set

# Grid resolution for spacetime visualization (cells per axis)
# Default: 32
# Valid range: 8-256 (higher values require more GPU memory)
VITE_GRID_RESOLUTION=32

# Animation timestep in seconds
# Default: 0.016 (~60 FPS)
# Valid range: 0.001-0.1 (lower values = smoother animation, higher CPU usage)
VITE_ANIMATION_TIMESTEP=0.016

# Web Worker for physics computation
# Default: true
# Set to false to force main thread computation (useful for debugging)
# When disabled, UI may be less responsive during complex simulations
VITE_USE_PHYSICS_WORKER=true

# Maximum video recording duration in seconds
# Default: 30
# Valid range: 1-60
# Higher values require more memory and may cause browser issues
VITE_MAX_VIDEO_DURATION=30

# Video recording bitrate in bits per second
# Default: 5000000 (5 Mbps)
# Higher values = better quality but larger files
VITE_VIDEO_BITRATE=5000000

# ============================================================
# Export Configuration (GIF/MP4)
# ============================================================

# Path to external encoder (optional)
# If using an external encoder for better GIF/MP4 quality, specify its path here
# Default: not set (uses browser-native encoding)
# Example: /usr/bin/ffmpeg or ./node_modules/.bin/gif-encoder
# VITE_EXPORT_ENCODER_PATH=

# Use Web Worker for export encoding
# Default: true
# Set to false to force main thread encoding (may block UI during export)
# Worker-based encoding provides better performance for longer exports
VITE_USE_EXPORT_WORKER=true

# Maximum concurrent export operations
# Default: 1
# Valid range: 1-5
# Higher values allow multiple exports simultaneously but use more memory
VITE_MAX_CONCURRENT_EXPORTS=1

# Maximum GIF duration in seconds
# Default: 10
# Valid range: 1-10
# GIFs are memory-intensive; longer durations may cause browser issues
VITE_MAX_GIF_DURATION=10

# Default GIF quality (1-20, lower is better quality but larger file)
# Default: 10
# Valid range: 1-20
VITE_GIF_QUALITY=10

# Default GIF frames per second
# Default: 15
# Valid range: 1-30
# Higher values create smoother animations but larger files
VITE_GIF_FPS=15

# Maximum MP4 duration in seconds
# Default: 30
# Valid range: 1-60
VITE_MAX_MP4_DURATION=30

# Default MP4 bitrate in bits per second
# Default: 5000000 (5 Mbps)
# Higher values = better quality but larger files
VITE_MP4_BITRATE=5000000
